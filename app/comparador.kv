<GerenciarTelas>:
    Menu:
        name: 'tela0'
    Comp:
        name: 'tela1'#inicio
    Tela2:
        name: 'tela2'#purgador
    Tela3:
        name: 'tela3'#manometro
    Tela4:
        name: 'tela4'#valvula de segurancao
    Tela5:
        name: 'tela5'#pressostato
    Tela6:
        name: 'tela6'#PSV
    Tela7:
        name: 'tela7'#bloq man
    Tela8:
        name: 'tela8'#fim/data

<Menu>:
    FloatLayout:
        orientation:'vertical'
        Image:
            source: 'engetaplogo.png'
            size_hint:(0.4,0.4)
            pos_hint:{'center_x':0.5,'center_y':0.72}
        MDFillRoundFlatButton:
            text:'inspeçao'
            pos_hint:{'center_x':0.5,'center_y':0.3}
            size_hint_x:0.55
            
            on_release: root.manager.current = 'tela1'

<Comp>:
    BoxLayout:#principal
        orientation: 'vertical'
        padding: 5
        Image:
            source:'engetaplogo.png'
            allow_stretch:True
        BoxLayout:#Cliente e setor
            spacing: 10
            MDTextField:
                id: local
                hint_text:' Local '
                halign: "center"
                text_color: 0, 128, 128, 1
            MDTextField:
                id: setor
                hint_text:'setor'
                halign: "center"
        BoxLayout:#input cliente e setor
            spacing: 10
            MDTextField:
                id: insira_tag
                hint_text:'insira TAG'
                halign: "center"
            MDTextField:
                id: nSerie
                hint_text:'insira N° de serie'
                halign: "center"
        BoxLayout:#uso e placa
            BoxLayout:
               # padding: 20
                spacing: 10
                MDLabel:
                    theme_font_styles:'Caption'
                    text:'Vaso em uso?'                   

                Button:
                    id: vaso
                    background_color: 0, 0, 1, 1                
                    text:'Sim'
                    on_press: self.background_color = (1.0, 0.0, 0.0, 1.0)
                                        
                Button:
                    text:'Nao \n Fim'                    
                    background_color: 0, 0, 1, 1
                    on_release: root.manager.current = 'tela8'
            BoxLayout:
                MDLabel:
                    text:'inst placa de TAG/CAT?'
                CheckBox:
                    id: tag_cat
                    color:'black'
        BoxLayout:#check box uso e placa
            spacing: 10
            MDLabel:
                text: 'Instalar placa indelével?'
            CheckBox:
                id: indelevel
                color:'black'
            MDLabel:
                text: 'Providenciar 2 saídas amplas?'
            CheckBox:
                color:'black'
                id: saida2
        BoxLayout:#placa e aterramento
            MDLabel:
                text:'instalar aterramento?'
            CheckBox:
                color:'black'
                id: aterramento
            MDLabel:
                text:' Calibrar manometro?'
            CheckBox:
                color:'black'
                id: calibrar_manometro
        BoxLayout:#placa e aterramento
            MDLabel:
                text:'Calibrar PSV?'
            CheckBox:
                color:'black'
                id: calibrar_psv
            MDLabel:
                text:'Realizar inspeçao ext.?'
            CheckBox:
                color:'black'
                id: externa
        BoxLayout:
            MDLabel:
                text:'Reconstruir Prontuario ?'
            CheckBox:
                color:'black'
                id: prontuario
            MDLabel:
                text:'Realizar inspeçao int.?'
            CheckBox:
                color:'black'
                id: interna
        MDBoxLayout:#button continuar
            spacing: 5
            Button:
                text:'Add Purgador?'
                background_color: 0, 0, 1, 1
                on_release: root.manager.current = 'tela2'
            Button:
                text:'Add Manometro?'                
                background_color: 0, 0, 1, 1
                on_release: root.manager.current = 'tela3'
            Button:
                text:'Val. de \n Segurança?'                
                background_color: 0, 0, 1, 1
                on_release: root.manager.current = 'tela4'
        MDBoxLayout:
            spacing: 5
            Button:
                text:'Add \n Pressostato?'                
                background_color: 0, 0, 1, 1
                on_release: root.manager.current = 'tela5'
            Button:
                text:'Bloq PSV?'
                background_color: 0, 0, 1, 1
                on_release: root.manager.current = 'tela6'
            Button:
                text:'Bloq \n Manometro?'                
                background_color: 0, 0, 1, 1
                on_release: root.manager.current = 'tela7'
        Button:
            text:"Finalizar"
            background_color: 0, 0, 1, 1
            on_press: root.finalizar()
